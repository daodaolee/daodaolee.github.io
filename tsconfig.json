{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "es2016",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "strict": true,
    "incremental": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "vite/client",
      "vite-plugin-pwa/client"
    ],
    "paths": {
      "minimalist/config": [
        "src/vitepress/config/baseConfig.js"
      ],
      "minimalist": [
        "src/index.ts"
      ],
      "minimalist/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "docs/.vitepress/**/*",
    "node_modules/@vueuse/core/index.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}